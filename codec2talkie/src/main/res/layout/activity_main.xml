<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/btn_menu_desc"
                android:src="@android:drawable/ic_menu_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:tint="?attr/colorSecondary"
                android:background="?attr/colorPrimary"/>

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/btn_settings_desc"
                android:src="@android:drawable/ic_menu_preferences"
                app:layout_constraintEnd_toStartOf="@+id/btnMenu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:tint="?attr/colorSecondary"
                android:background="?attr/colorPrimary"/>

            <ImageButton
                android:id="@+id/btnTracking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/btn_tracking_desc"
                android:src="@android:drawable/ic_menu_compass"
                app:layout_constraintEnd_toStartOf="@+id/btnSettings"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:tint="?attr/colorSecondary"
                android:background="?attr/colorPrimary"/>

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="?attr/colorSecondary"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textBtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:textColor="?attr/colorSecondary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTitle" />

            <TextView
                android:id="@+id/textTelemetry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="4dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="?attr/colorSecondary"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:maxLines="1"
                app:layout_constraintEnd_toStartOf="@+id/btnTracking"
                app:layout_constraintTop_toBottomOf="@+id/textTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/codecMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="14sp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainToolbar" />

    <TextView
        android:id="@+id/textRssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toStartOf="@+id/textStatus"
        app:layout_constraintTop_toBottomOf="@+id/mainToolbar" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainToolbar" />

    <FrameLayout
        android:id="@+id/frameRssi"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codecMode">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/textViewRssi0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S0"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S1"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S2"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S3"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S4"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S5"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S6"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S7"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".1"
                android:textSize="12sp"
                android:text="S8"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:text="S9"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewRssi10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:text="+10"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewRssi20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:text="+20"
                tools:ignore="HardcodedText" />
            <TextView
                android:id="@+id/textViewRssi30"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:text="+30"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewRssi40"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight=".2"
                android:textSize="12sp"
                android:text="+40"
                tools:ignore="HardcodedText" />
        </LinearLayout>

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressRssi"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameRssi"/>

    <ProgressBar
        android:id="@+id/progressAudioLevel"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressRssi" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentMain"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:name="com.radio.codec2talkie.audio.CallFragment"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressAudioLevel"
        app:layout_constraintBottom_toTopOf="@+id/btnBar"
        app:layout_constraintHeight_percent="0.78"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout="@layout/activity_call_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnCall"
            style="@style/main_fragment_selection_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/push_to_talk"
            android:contentDescription="@string/btn_call_desc"
            android:src="@drawable/baseline_call_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/btnMessages"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintDimensionRatio="1:1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMessages"
            style="@style/main_fragment_selection_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/btn_messages_text"
            android:contentDescription="@string/btn_messages_desc"
            android:src="@drawable/baseline_chat_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnCall"
            app:layout_constraintRight_toLeftOf="@+id/btnLog"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintDimensionRatio="1:1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnLog"
            style="@style/main_fragment_selection_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/btn_log_desc"
            android:contentDescription="@string/btn_log_desc"
            android:src="@drawable/baseline_log_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnMessages"
            app:layout_constraintRight_toLeftOf="@+id/btnMap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintDimensionRatio="1:1"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMap"
            style="@style/main_fragment_selection_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/btn_map_desc"
            android:contentDescription="@string/btn_map_desc"
            android:src="@drawable/baseline_map_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btnLog"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintDimensionRatio="1:1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>