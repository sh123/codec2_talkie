<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/send_message_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/send_message_to_target_edit"
        style="@style/callsign_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/send_message_to_target_edit_callsign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_message_to_btn_ok"
        style="@style/generic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message_to_btn_ok_text"
        app:layout_constraintEnd_toStartOf="@+id/send_message_to_btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_message_to_target_edit" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_message_to_btn_cancel"
        style="@style/generic_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_message_to_btn_cancel_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/send_message_to_btn_ok"
        app:layout_constraintTop_toBottomOf="@+id/send_message_to_target_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>