<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/dark_blue</item>           <!-- Light blue for background -->
        <item name="colorPrimaryVariant">@color/dark_blue</item>     <!-- Darker shade for accents -->
        <item name="colorOnPrimary">@color/dark_gray</item>         <!-- Dark text on light blue -->
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/light_gray</item>         <!-- Light gray for secondary areas -->
        <item name="colorSecondaryVariant">@color/medium_gray</item>   <!-- Darker gray for variants -->
        <item name="colorOnSecondary">@color/black</item>           <!-- Black for contrast -->
        <!-- Buttons -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
    </style>
</resources>